@page
@model M_Chat.UI.Pages.HomePage.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutUserPage";
}

<h1>Details</h1>

<section class="page-section" id="services">
    <div class="container" >
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Vista general de la cuenta</h2>
            <h3 class="section-subheading text-muted">Perfil</h3>
        </div>
        <div class="text-center">

            <dl class="row ">
                <dt class="col-sm-5 text-right ">
                    @Html.DisplayNameFor(model => model.Tutor.Email)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.Tutor.Email)
                </dd>

                <dt class="col-sm-5 text-right">
                    @Html.DisplayNameFor(model => model.Tutor.Fecha_Nacimiento)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.Tutor.Fecha_Nacimiento)
                </dd>
                <dt class="col-sm-5 text-right">
                    @Html.DisplayNameFor(model => model.Tutor.Genero)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.Tutor.Genero)
                </dd>
                <dt class="col-sm-5 text-right">
                    @Html.DisplayNameFor(model => model.Tutor.Nombre)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.Tutor.Nombre)
                </dd>
                <dt class="col-sm-5 text-right">
                    @Html.DisplayNameFor(model => model.Tutor.Apellido)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.Tutor.Apellido)
                </dd>
                <dt class="col-sm-5 text-right">
                    @Html.DisplayNameFor(model => model.Tutor.Curp)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(model => model.Tutor.Curp)
                </dd>
            </dl>
        </div>
        <div class="text-center">
            <a class="btn btn-primary " asp-page="./EditUser" asp-route-id="@Model.Tutor.TutorId">Editar Perfil</a>           
        </div>

    </div>
</section>



