@page
@model M_Chat.UI.Pages.Home.RegistroModel
@{
    ViewData["Title"] = "Registro";
    Layout = "_Registro";

}

<div class="page-wrapper bg-gra-02 p-t-130 p-b-100" style="background-image: url('../assets/img/bg-01.jpg'); ">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <div class="card-body">
                <h2 class="title">Formulario de registro</h2>
                <form method="POST" enctype="multipart/form-data">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="form-group">
                                <label  asp-for="Tutor.Nombre" class="control-label"></label>
                                <input class="input--style-4 form-control" type="text" name="first_name" asp-for="Tutor.Nombre">
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <label asp-for="Tutor.Apellido" class="control-label"></label>
                                <input class="input--style-4 form-control" type="text" name="last_name" asp-for="Tutor.Apellido">
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="form-group">
                                <label asp-for="Tutor.Curp" class="control-label"></label>
                                <input class="input--style-4 form-control" type="text" name="curp" asp-for="Tutor.Curp">
                            </div>
                        </div>
                        

                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="form-group">
                                <label asp-for="Tutor.Fecha_Nacimiento" class="control-label"></label>
                                <div class="input-group-icon">
                                    <input class="input--style-4 js-datepicker form-control" type="text" name="birthday" asp-for="Tutor.Fecha_Nacimiento">
                                    <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <label asp-for="Tutor.Genero" class="control-label"></label>
                                <input class="input--style-4 form-control" type="text" name="" asp-for="Tutor.Genero">
                            </div>
                        </div>

                    </div>
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="form-group">
                                <label class="control-label" asp-for="Tutor.Email"></label>
                                <input class="input--style-4 form-control" type="email" name="email" asp-for="Tutor.Email">
                                <span class="text-danger" asp-validation-for="Tutor.Email"></span>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <label class="control-label" asp-for="Tutor.Contraseña"></label>
                                <input class="input--style-4 form-control" type="text" name="password" asp-for="Tutor.Contraseña">
                                <span class="text-danger" asp-validation-for="Tutor.Contraseña"></span>
                            </div>
                        </div>
                        <div class="w-full text-center p-t-55">
                            <span class="txt2">
                                Para obtener más información acerca de cómo M-Chat recopila, utiliza, comparte y protege tus datos personales, consulta la
                            </span>

                            <a asp-page="Registro" class="txt2 ">
                                Política de Privacidad
                            </a>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>

                        <div class="w-full text-center p-t-55">
                            <a asp-page="/Index" class="txt1 ">
                                Inicio
                            </a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


