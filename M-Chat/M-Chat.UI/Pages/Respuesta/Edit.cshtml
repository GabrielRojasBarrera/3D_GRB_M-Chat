@page
@model M_Chat.UI.Pages.Respuesta.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Respuestas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Respuestas.RespuestaId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Respuestas.Respuesta" /> @Html.DisplayNameFor(model => model.Respuestas.Respuesta)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Respuestas.PreguntaId" class="control-label"></label>
                <select asp-for="Respuestas.PreguntaId" class="form-control" asp-items="ViewBag.PreguntaId"></select>
                <span asp-validation-for="Respuestas.PreguntaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
