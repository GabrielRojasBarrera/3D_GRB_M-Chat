@page
@model M_Chat.UI.Pages.Home.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Login";
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('../assets/img/bg-01.jpg'); ">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
            <form class="login100-form validate-form flex-sb flex-w" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <span class="login100-form-title p-b-53">
                    Inicia Sesión
                </span>
                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Correo electrónico
                    </span>
                </div>
                <div class="wrap-input100 validate-input " data-validate="Debes introducir tu correo electrónico.">
                    <input class="input100 form-control" asp-for="Tutor.Email">
                    <span class="focus-input100"></span>
                    <span class="text-danger" asp-validation-for="Tutor.Email"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Contraseña
                    </span>

                    <a href="#" class="txt2 bo1 m-l-5">
                        La has olvidado?
                    </a>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Debes introducir una contraseña.">
                    <input class="input100 form-control" asp-for="Tutor.Contraseña">
                    <span class="text-danger" asp-validation-for="Tutor.Contraseña"></span>
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn" >
                        INICIAR SESIÓN
                    </button>
                </div>

                <div class="w-full text-center p-t-55">
                    <span class="txt2">
                        No tienes?
                    </span>

                    <a asp-page="../HomePage/CreateUser" class="txt2 bo1">
                        Registrate
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




